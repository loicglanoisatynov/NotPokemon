<UserControl x:Class="PokeWish.MVVM.View.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" KeyDown="Window_KeyDown">
    
	<Grid Background="#7f860f">
		<Image x:Name="Logo" Source="/assets/images/logo.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" />

		<TextBlock x:Name="WelcomeText" Text="Appuyez sur une touche pour continuer"
                   FontSize="16" Foreground="#577c44"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Margin="0,350,0,0"
				   Visibility="Collapsed" />

	</Grid>
</UserControl>
